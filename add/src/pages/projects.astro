import 'bootstrap/dist/css/bootstrap.css';
const response = await fetch("https://api.github.com/users/hugh-vergara/repos");
const repos = await response.json();

---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My GitHub Repositories</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {

            color: #212529;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #d2b48c;
            background-image: linear-gradient(315deg, #d2b48c 0%, #f5deb3 74%);
        }

        /* Fixed header */
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #ffffff;
            padding: 15px 0;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

        .nav-container {
            display: flex;
            justify-content: center;
            gap: 30px;
        }

        .nav-container a {
            text-decoration: none;
            color: #212529;
            font-weight: bold;
            position: relative;
            padding: 5px 10px;
        }



        /* Underline hover effect */
        .nav-container a::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: -2px;
            width: 100%;
            height: 2px;
            background-color: black;
            transform: scaleX(0);
            transform-origin: center;
            transition: transform 0.3s ease-in-out;
        }

        .nav-container a:hover::after {
            transform: scaleX(1);
        }

        /* Main container */
        .container {
            max-width: 800px;
            margin: 100px auto 20px;
            padding: 20px;
        }

        .repo-card {
            background: #ffffff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: 1px solid #dee2e6;
            margin-bottom: 15px;
        }

        .repo-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .repo-header h3 {
            margin: 0;
            font-size: 1.2rem;
        }

        .repo-link {
            color: inherit;
            text-decoration: none;
            font-weight: normal !important;
        }

        .repo-description {
            margin-top: 8px;
            color: #495057;
        }

        .repo-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
            font-size: 0.9rem;
            color: #6c757d;
        }
        a {
            position: relative;
            text-decoration: none;
            font-weight: normal !important;
        }

        .footer {
            text-align: center;
            //padding: 20px;
            //background: linear-gradient(to right, #e0aaff, #f3c6f1);
            //color: #6b4eaa;
            font-family: Arial, sans-serif;
            padding-right: 140px;
        }

        .footer-title {
            font-weight: bold;
            font-size: 1.2rem;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .icon-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            font-size: 2rem;
        }

        .footer-text {
            margin-top: 10px;
            font-size: 0.9rem;
        }

        .icon-container a {
            color: black; /* Makes the icons black */
            text-decoration: none; /* Removes underline */
        }

        .icon-container a:hover {
            color: #333; /* Darker shade on hover (optional) */
        }
    </style>
</head>
<body>

<!-- Fixed Header -->
<header class="opacity-50" >
    <div class="nav-container">
        <a href="/" class="active">Home</a>
        <a href="/projects">Projects</a>
        <a href="https://github.com/hugh-vergara?tab=repositories" target="_blank">GitHub</a>
        <a href="https://n-queens-three.vercel.app/">N-Queens Solver!</a>
    </div>
</header>

<!-- Main Content -->
<div class="container">

    <h1 >My Top Repositories</h1>
    <p>
        This is my top repositories that reflect my skills. These projects showcase my expertise in various
        technologies, problem-solving abilities, and passion for coding. Each repository represents real-world
        applications, efficient algorithms, and clean code practices. Feel free to explore them to see my work,
        contributions, and coding style in action.
    </p>

    {repos.length === 0 ? (
            <p class="text-center">No repositories found.</p>
    ) : (
        repos.map((repo) => (
                <div class="repo-card">
                    <div class="repo-header">
                        <h3>
                            <a href={repo.html_url} class="repo-link" target="_blank">{repo.name}</a>
                        </h3>
                        <a href={repo.html_url} target="_blank">
                            <i class="bi bi-github" style="font-size: 1.5rem; color: #212529;"></i>
                        </a>
                    </div>
                    <p class="repo-description">{repo.description || "No description provided."}</p>
                    <div class="repo-footer">
                        <span><i class="bi bi-star-fill text-warning"></i> {repo.stargazers_count}</span>
                        <span><i class="bi bi-code-slash"></i> {repo.language || "Unknown"}</span>
                    </div>
                </div>
        ))
    )}
</div>

<footer class=" w-100 d-flex flex-column align-items-center py-3 " >
    <p class="footer-title">CONNECT WITH ME</p>
    <div class="icon-container d-flex gap-3">
        <a href="https://www.linkedin.com/in/vergara-hugh/" target="_blank">
            <i class="bi bi-linkedin"></i>
        </a>
        <a href="https://x.com/hugh_vergara" target="_blank">
            <i class="bi bi-twitter-x"></i>
        </a>
        <a href="https://www.instagram.com/hugh_vergara/" target="_blank">
            <i class="bi bi-instagram"></i>
        </a>
    </div>
    <div class="mt-3 text-center">
        <p class="footer-text">Â© 2024 Simple Webpage By VERGARA, HUGH MCLUDE L. All rights reserved.</p>
        <p class="footer-text">Contact Me: mikovergara21@gmail.com</p>
    </div>
</footer>

</body>
</html>